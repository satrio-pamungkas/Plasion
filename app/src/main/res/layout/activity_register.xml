<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    tools:context=".activities.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="72dp"
                android:adjustViewBounds="true"
                android:src="@drawable/logo_plasion" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_extrabold"
            android:layout_marginTop="54dp"
            android:textSize="28sp"
            android:textColor="@color/red_main"
            android:text="Buat Akun" />

        <EditText
            android:id="@+id/alamat_surel_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:textSize="18sp"
            android:fontFamily="@font/open_sans"
            android:backgroundTint="@color/red_main"
            android:hint="Alamat Surel"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/kata_sandi_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:textSize="18sp"
            android:fontFamily="@font/open_sans"
            android:backgroundTint="@color/red_main"
            android:hint="Kata Sandi"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/kata_sandi_ulangi_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:textSize="18sp"
            android:fontFamily="@font/open_sans"
            android:backgroundTint="@color/red_main"
            android:hint="Ulangi Kata Sandi"
            android:inputType="textPassword" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/raleway_bold"
            android:text="@string/next"
            android:textColor="@color/white"
            android:clickable="true"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>